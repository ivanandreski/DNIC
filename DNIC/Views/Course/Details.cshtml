@model DNIC.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
        <a asp-action="Index">Back to List</a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-10">
                    <img src="data:image;base64,@System.Convert.ToBase64String(@Model.Image)"
                         class="card-img-top"
                         alt="..."
                         style="width:100%;height:40vh;object-fit:cover;" />
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>Page</th>
                        <th>Title</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sec in Model.Sections)
                    {
                        <tr>
                            <th>@sec.Page</th>
                            <td>@sec.Title</td>
                            <td>
                                <a href=@Html.Raw($"/Section/Edit/{sec.Id}") class="btn btn-secondary">Edit</a>
                                <a href=@Html.Raw($"/Section/Delete/{sec.Id}") class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a href=@Html.Raw($"/Section/Create?courseId={Model.Id}") class="btn btn-primary">Add Secton</a>
            <hr />
        </div>
    </div>

</div>

